<Application x:Class="Shuriken.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Shuriken"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewmodels="clr-namespace:Shuriken.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="FontAwesome">/Fonts/fa-solid-900.ttf#Font Awesome 5 Free Solid</FontFamily>
            
            <!--Handy Controls does not style grid splitter for some reason...-->
            <Style TargetType="{x:Type GridSplitter}">
                <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
