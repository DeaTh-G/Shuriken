<UserControl x:Class="Shuriken.Controls.Vector2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:Shuriken.Models"
             xmlns:converters="clr-namespace:Shuriken.Converters"
             xmlns:local="clr-namespace:Shuriken.Controls" d:DataContext="{d:DesignInstance Type=local:Vector2Control}"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="X" VerticalAlignment="Center" Margin="0 0 5 0"/>
        <TextBox Name="XTextBox" Grid.Column="1" Text="{Binding X}"/>
        <TextBlock Grid.Column="2" Text="Y" VerticalAlignment="Center" Margin="5 0 5 0"/>
        <TextBox Name="YTextBox" Grid.Column="3" Text="{Binding Y}"/>
    </Grid>
</UserControl>
