<UserControl x:Class="Shuriken.Controls.ColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shuriken.Controls"
             xmlns:converters="clr-namespace:Shuriken.Converters"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:ColorControl}"
             d:DesignHeight="35" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="R" VerticalAlignment="Center" Margin="0 0 5 0"/>
        <TextBox Grid.Column="1" Text="{Binding R, UpdateSourceTrigger=PropertyChanged, FallbackValue=111}"/>
        <TextBlock Grid.Column="2" Text="G" VerticalAlignment="Center" Margin="5 0 5 0"/>
        <TextBox Grid.Column="3" Text="{Binding G, UpdateSourceTrigger=PropertyChanged, FallbackValue=65}"/>
        <TextBlock Grid.Column="4" Text="B" VerticalAlignment="Center" Margin="5 0 5 0"/>
        <TextBox Grid.Column="5" Text="{Binding B, UpdateSourceTrigger=PropertyChanged, FallbackValue=229}"/>
        <TextBlock Grid.Column="6" Text="A" VerticalAlignment="Center" Margin="5 0 5 0"/>
        <TextBox Grid.Column="7" Text="{Binding A, UpdateSourceTrigger=PropertyChanged, FallbackValue=255}"/>
        <Button Name="ColorBtn" Grid.Column="8" Width="30" Height="30" Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}, FallbackValue=#6f41e5}" Click="ColorBtnClick"/>
    </Grid>
</UserControl>
